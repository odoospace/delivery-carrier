<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_delivery_carrier_label_form_nacexapi" model="ir.ui.view">
            <field name="name">delivery.carrier.label.form.nacexapi</field>
            <field name="model">carrier.account</field>
            <field name="inherit_id" ref="base_delivery_carrier_label.carrier_account_view_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="inside">
                    <group colspan="4" col="4">
                        <separator string="NACEX Options" colspan="4"/>
                        <field name="nacex_api_debug"/>
                        <field name="nacex_api_user"/>
                        <field name="nacex_api_pwd"/>
                        <field name="nacex_api_url"/>
                        <field name="nacex_api_del_cli"/>
                        <field name="nacex_api_num_cli"/>
                        <field name="nacex_api_tip_cob"/>
                        <field name="nacex_api_tip_ser"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="view_picking_out_form_carrier_label_nacex" model="ir.ui.view">
            <field name="name">stock.picking.form.nacex</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <data>
                    <page name="extra" position="inside">
                        <group>
                            <field name="carrier_nacex_url"/>
                            <field name="carrier_operation_id"/>
                        </group>
                    </page>
                </data>
            </field>
        </record>

        <record id="button_click_action_api_label_nacex_cancel" model="ir.actions.server">
            <field name="name">NACEX API CANCEl</field>
            <field name="model_id" ref="model_stock_picking"/>
            <field name="state">code</field>
            <field name="code">record.cancel_nacex_api()</field>
           <field name="res_model">stock.picking</field>
        </record>

        <record id="button_click_action_api_label_nacex_regenerate" model="ir.actions.server">
            <field name="name">NACEX API REGENERATE</field>
            <field name="model_id" ref="model_stock_picking"/>
            <field name="state">code</field>
            <field name="code">record.regenerate_nacex_api()</field>
           <field name="res_model">stock.picking</field>
        </record>

    </data>
</odoo>
